<fieldset class="CalenderEvent mdl-shadow--2dp">
<legend>Add Event</legend>
@using (Html.BeginForm("AddEvent", "Calendar"))
{

    //Track if editing an event, or adding a new one
    <input type="hidden" name="id" id="id" value="0" />
    
    <div class="mdl-grid mdl-grid--no-spacing">
        
        <div class="mdl-cell mdl-cell--9-col" >
            <label>Title:</label>
            <br />
            <textarea rows="1" cols="50" name="title" id="title"></textarea>
            <br />
        </div>

        <div class="mdl-cell mdl-cell--3-col" >
            <label>All Day Event?</label>
            <br />
            <select name="allDay" id="allDay">
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
            <br />
        </div>
    
    </div>

    <div class="mdl-grid mdl-grid--no-spacing">

        <div class="mdl-cell mdl-cell--4-col" >
            <label>Start Date:</label>
            <br />
            <input type="text" name="startDate" id="startDate" class="eventDate" />
            <br />
        </div>
    
        <div class="mdl-cell mdl-cell--4-col" >
            <div class="time">
            <label>Start Time:</label>
            <br />
            <select name="startTime1" id="startTime1">
                <option value="00">00</option>
                <option value="01">01</option>
                <option value="02">02</option>
                <option value="03">03</option>
                <option value="04">04</option>
                <option value="05">05</option>
                <option value="06">06</option>
                <option value="07">07</option>
                <option value="08">08</option>
                <option value="09">09</option>
                <option value="10">10</option>
                <option value="11">11</option>
                <option value="12">12</option>
            </select>
            :
            <select name="startTime2" id="startTime2">
            @for (int i = 0; i <= 60; i++)
            {
                string time;
                if (i < 10)
                {
                    time = "0" + i.ToString();
                }
                else
                {
                    time = i.ToString();
                }

                <option value="@time">@time</option>

            } 
            </select>

           <select name="startAmPm">
                <option value="AM">AM</option>
                <option value="PM">PM</option>
            </select>
            <br />
            </div>
        </div>

    </div> //End grid div
    
    <div class="mdl-grid mdl-grid--no-spacing">

         <div class="mdl-cell mdl-cell--4-col" >
            <label>End Date:</label>
            <br />
            <input type="text" name="endDate" id="endDate" class="eventDate" />
            <br />
        </div>

        <div class="mdl-cell mdl-cell--4-col" >
            <div class="time">
            <label>End Time:</label>
            <br />
            <select name="endTime1" id="endTime1">
                <option value="00">00</option>
                <option value="01">01</option>
                <option value="02">02</option>
                <option value="03">03</option>
                <option value="04">04</option>
                <option value="05">05</option>
                <option value="06">06</option>
                <option value="07">07</option>
                <option value="08">08</option>
                <option value="09">09</option>
                <option value="10">10</option>
                <option value="11">11</option>
                <option value="12">12</option>
            </select>
            :
            <select name="endTime2" id="endTime2">
            @for (int i = 0; i <= 60; i++)
            {
                string time;
                if (i < 10)
                {
                    time = "0" + i.ToString();
                }
                else
                {
                    time = i.ToString();
                }

                <option value="@time">@time</option>

            }   
            </select>
            <select name="endAmPm" id="endAmPm">
                <option value="AM">AM</option>
                <option value="PM">PM</option>
            </select>
            <br />
            </div>
        
        </div> @*End col div*@ 
    </div>
           

    <br />
    <input type="submit" value="Save Event" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent button" /><input type="button" value="Create New Event" id="clearEvent" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent button" />

}
