                                    {
                                        <a href="~/Attachments/@attachment.filePath" target="_blank">@attachment.filePath<br /></a>
                                    }
                                    </td>*@
                            </tr>
                        }

                    </tbody>

                    @*<tfoot>
                        <tr>*@

                            
                        @*</tr>
                    </tfoot>*@
                </table>

                <div class="row">
                    <div class="col s12">
                        <p class="paging">@Html.PageLinks(Model.PagingInfo, x => Url.Action((string)ViewBag.Method, new { page = x }))</p>
                    </div>
                </div>


    </fieldset>

