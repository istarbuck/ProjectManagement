<fieldset id="EditTask" class="z-depth-1">

<legend>CC Task File</legend>

<div class="row row--no-spacing">
    <div class="col s6" >
    <a href="RequestInfo?requestID=@Model.request.reuqestID.ToString()&position=EditTask">Edit Case File</a> 
    </div>
</div>

<div class='datagrid'>
<table>
<thead><tr><th class="hide-on-med-and-down">Order</th><th>Task</th><th class="hide-on-med-and-down">Status</th><th class="hide-on-med-and-down">Due Date</th><th class="hide-on-med-and-down">Assigned To</th></tr></thead>
<tbody>

@{
    string rowColor = "alt";
}

@foreach (var task in Model.taskList)
{
    if (rowColor == "noAlt")
    {
        rowColor = "alt";
    }
    else
    {
        rowColor = "noAlt";
    }

    string assignments = "";

    try
    {
        var currentAssignments = Model.taskAssignments.Where(t => t.taskID == task.taskID);

        foreach (var assigned in currentAssignments)
        {
            assignments += assigned.staffID + ", ";
        }
    }
    catch { }
    
    <tr class="@rowColor" @if (task.priority == true) {<text> style="outline: thin solid red"</text>}>
        <td class="hide-on-med-and-down">@task.orderNum</td>
        <td>@task.Task</td>
        <td class="hide-on-med-and-down">@task.Status</td>
        <td class="hide-on-med-and-down">@task.DueDate</td>
        <td class="hide-on-med-and-down">@assignments</td>
    </tr>
}

</tbody>

</table>

</div>

</fieldset>
<br /><br />



<fieldset id="EditAttachments" class="z-depth-1">

<legend>CC Attachments</legend>

<div class="row row--no-spacing ">
    <div class="col s6" >

    <a href="RequestInfo?requestID=@Model.request.reuqestID.ToString()&position=EditAttachments">Edit Case File</a> 
    </div>
</div>


<div class='datagrid'>
<table>

    <thead>
    <tr>
    <th>File Path</th>

    @if (Model.request.categoryID == "cool")
    {
        <th>Caption</th>
    }

    </tr>
    </thead>

    <tr class="noAlt">
        @if (@Model.request.doaAttachment != "Submitted by DOA" && @Model.request.doaAttachment != "Submitted by DOA or Staff" && @Model.request.doaAttachment != "Approval not needed" && @Model.request.doaAttachment != null)
        {
            <td><a href="~/Attachments/@Model.request.doaAttachment" target="_blank">@Model.request.doaAttachment (Approval File)</a></td>
        }


@{ rowColor = "noAlt"; }

@foreach (var attachment in Model.attachment)
{

    if (rowColor == "noAlt")
    {
        rowColor = "alt";
    }
    else
    {
        rowColor = "noAlt";
    }
    <tr class="@rowColor">
    <td><a href="~/Attachments/@attachment.filePath" target="_blank">@attachment.filePath</a></td>
    @if (Model.request.categoryID == "cool")
    {
        <td>@attachment.caption</td>
    }
    </tr>
}


</table>
</div>

</fieldset>
