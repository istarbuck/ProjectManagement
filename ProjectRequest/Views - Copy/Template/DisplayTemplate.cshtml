@model ProjectRequest.Models.TemplateInfo

@{
    ViewBag.Title = "Edit CC Guidelines";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    $(document).ready(function () {
        $('.dueDate').datepicker();
        $('#staffList').hide();

        $(document).click(function (e) {
            $('#staffList').hide();
        });

        $('.assignment, #TO').click(function (e) {
            e.stopPropagation();
            var textBoxPostion = $(this).position();
            $('#staffList').css({ top: textBoxPostion.top + 30, left: textBoxPostion.left });
            $('#staffList').show();

            var previousBox = $('#current');
            previousBox.removeAttr('id');

            $(this).attr('id', 'current');
        });

        $('#staffList a').click(function (e) {
            var staffID = $(this).attr('href');
            var assignments = $('#current').val();

            assignments = assignments + staffID + ",";

            $('#current').val(assignments);

            $('#staffList').hide();

            e.preventDefault();
        });
    });
</script>

<h3>Edit CC Investigational Guideline</h3>

@using (Html.BeginForm("EditTemplate", "Template"))
{
    if (Model.template != null)
    {
        <input type="hidden" id="templateID" name="templateID" value="@Model.template.templateID" />
    
        <label for="templateName">Guideline Name:</label>
        <input type="text" id="templateName" name="templateName" value="@Model.template.templateName" />
    }
    else
    {
        <input type="hidden" id="templateID" name="templateID"  />
    
        <label for="templateName">Guideline Name:</label>
        <input type="text" id="templateName" name="templateName"  />
    }
    

     <div class='datagrid'>
<table>
<thead><tr><th>Order</th><th>Task</th><th>Status</th><th>Due Date</th><th>Assigned To</th><th>Delete</th></tr></thead>
<tbody>

@{
    string rowColor = "alt";
}

@foreach (var task in Model.taskList)
{
    if (rowColor == "noAlt")
    {
        rowColor = "alt";
    }
    else
    {
        rowColor = "noAlt";
    }

    string assignments = "";

    try
    {
        var currentAssignments = Model.taskAssignments.Where(t => t.taskID == task.taskID);

        foreach (var assigned in currentAssignments)
        {
            assignments += assigned.staffID + ", ";
        }
    }
    catch { }
    
    <tr class="@rowColor">
        <td><input type="text" name="Order_@task.taskID" id="Order_@task.taskID" value="@task.orderNum" class="order" /></td>
        <td><textarea rows="1" name="Task_@task.taskID" id="Task_@task.taskID" class="task">@task.Task</textarea></td>
        <td>
            <select name="Status_@task.taskID" id="Status_@task.taskID">
            <option value="00">Please Select:</option>
            @foreach (var status in Model.taskStatus)
            {
                if (status.status == task.Status)
                {
                    <option value="@status.status" selected="selected">@status.status</option>      
                }
                else
                {
                    <option value="@status.status">@status.status</option>
                }
            }
        </select>
        </td>
        <td><input type="text" name="DueDate_@task.taskID" id="DueDate_@task.taskID" value="@task.DueDate" class="dueDate" /></td>
        <td><input type="text" name="Assignment_@task.taskID" id="Assignment_@task.taskID" value="@assignments"  class="assignment" /></td>
        <td><input type="checkbox" id="Delete_@task.taskID" name="Delete_@task.taskID"  /></td>
    </tr>
}
    @if (rowColor == "noAlt")
    {
        rowColor = "alt";
    }
    else
    {
        rowColor = "noAlt";
    }
    <tr class="@rowColor">
        <td><input type="text" name="Order" id="Order" class="order" /></td>
        <td><textarea rows="1" name="Task" id="Task" class="task"></textarea></td>
        <td>    
        <select name="Status" id="Status">
            <option value="00">Please Select:</option>
            @foreach (var status in Model.taskStatus)
            {
                <option value="@status.status">@status.status</option>      
            }
        </select>
        </td>
        <td><input type="text" name="DueDate" id="DueDate" class="dueDate" /></td>
        <td><input type="text" name="Assignment" id="Assignment" class="assignment" /></td>
        <td></td>
    </tr>

</tbody>

</table>
</div>
    
    <input type="submit" value="Save Investigational Guideline" />
    
}

<div id="staffList">
    <ul>
    @foreach (var staff in Model.staff)
    {
        <li><a href="@staff.staffID">@staff.firstName @staff.lastName</a></li>
    }
    </ul>
</div>
